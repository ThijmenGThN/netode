{
  "name": "netode",
  "version": "1.0.0",
  "description": "Netode.ThijmenHeuvelink.nl @ 2021 - https://github.com/ThijmenGThN/Netode",
  "author": "mail@thijmenheuvelink.nl",
  "dependencies": {
    "@electron/remote": "^2.0.1",
    "electron-is-dev": "^2.0.0"
  },
  "devDependencies": {
    "concurrently": "^6.3.0",
    "cross-env": "^7.0.3",
    "electron": "^15.2.0",
    "electron-builder": "^22.13.1",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "react-icons": "^4.3.1",
    "react-router-dom": "^5.3.0",
    "react-scripts": "^3.4.4",
    "uaup-js": "^0.0.22",
    "wait-on": "^6.0.0"
  },
  "main": "public/main.js",
  "homepage": "./",
  "scripts": {
    "serve": "concurrently -k \"cross-env BROWSER=none react-scripts start\" \"wait-on tcp:3000 && electron .\"",
    "build": "react-scripts build && electron-builder -c.extraMetadata.main=build/main.js"
  },
  "build": {
    "extends": null,
    "appId": "nl.thijmenheuvelink.netode",
    "artifactName": "netode-${version}.${ext}",
    "files": [
      "build/**/*",
      "node_modules/**/*",
      "package.json"
    ],
    "directories": {
      "buildResources": "assets"
    },
    "win": {
      "icon": "public/favicon.ico"
    }
  },
  "eslintConfig": {
    "extends": [
      "react-app",
      "react-app/jest"
    ]
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  }
}
